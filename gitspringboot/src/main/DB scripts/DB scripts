CREATE SEQUENCE hello_seq
  MINVALUE 1
  MAXVALUE 9999999999
  START WITH 4
  INCREMENT BY 1;
  
CREATE SEQUENCE customer_seq
  MINVALUE 1
  MAXVALUE 9999999999
  START WITH 1
  INCREMENT BY 1;  
  
CREATE SEQUENCE order_seq
  MINVALUE 1
  MAXVALUE 9999999999
  START WITH 1
  INCREMENT BY 1; 
    
CREATE TABLE CUSTOMER
(
	CUST_ID numeric(10) not null,
	FIRST_NAME varchar2(30) not null,
	LAST_NAME varchar2(30) not null,
	STREET varchar2(20) not null,
  
  CONSTRAINT CUST_pk PRIMARY KEY (CUST_ID)
);

CREATE TABLE ORDERS
( ORDER_ID numeric(10) not null,
  CUST_ID numeric(10) not null,
  TOTAL_PRICE number(7,2),
  OREDER_DESC varchar2(50),
  ORDER_DATE date,
  LAST_UPDATED_TIME date,
   CONSTRAINT ORDER_pk PRIMARY KEY (ORDER_ID),
  CONSTRAINT fk_CUST_ID
    FOREIGN KEY (CUST_ID)
    REFERENCES CUSTOMER(CUST_ID)
);    


CREATE SEQUENCE invoice_seq
  MINVALUE 1
  MAXVALUE 9999999999
  START WITH 1
  INCREMENT BY 1; 
  
 
CREATE TABLE ORDER_INVOICE
( INVOICE_ID numeric(10) not null,
  ORDER_ID numeric(10) not null,
  AMOUNT_DUE number(7,2),
  DATE_RAISED date,
  DATE_SETTLED date,
  DATE_CANCELLED date,
  LAST_UPDATED_TIME date,
   CONSTRAINT INVOICE_pk PRIMARY KEY (INVOICE_ID),
   CONSTRAINT fk_ORDER_ID FOREIGN KEY (ORDER_ID)
    REFERENCES ORDERS(ORDER_ID)
);


  CREATE SEQUENCE  CERT_SEQ  MINVALUE 1 MAXVALUE 9999999999 INCREMENT BY 1
  START WITH 121 CACHE 20 NOORDER  NOCYCLE ;

CREATE TABLE CERT_DETAILS
(
    CERT_ID integer NOT NULL  PRIMARY KEY,
    CERT_NAME  vARCHAR2(50) NOT NULL,
	EXP_DATE DATE,
	CONTRACT_NAME vARCHAR2(50) NOT NULL,
	CONTRACT_EMAIL vARCHAR2(50) NOT NULL
);

